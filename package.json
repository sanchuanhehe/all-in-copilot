{
	"name": "all-in-copilot",
	"publisher": "sanchuan",
	"displayName": "All-In Copilot",
	"description": "Multi-API LLM provider framework for VS Code - Build your own Copilot extension",
	"icon": "assets/logo.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/sanchuanhehe/all-in-copilot"
	},
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.104.0"
	},
	"categories": [
		"AI",
		"Chat"
	],
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "pnpm --filter @all-in-copilot/sdk build && pnpm --filter @all-in-copilot/cli build",
		"build:sdk": "pnpm --filter @all-in-copilot/sdk build",
		"build:cli": "pnpm --filter @all-in-copilot/cli build",
		"build:templates": "cd templates/acp-template && pnpm compile && cd ../base-template && pnpm compile && cd ../glm-template && pnpm compile && cd ../minimax-template && pnpm compile && cd ../kimi-template && pnpm compile && cd ../mimo-template && pnpm compile && cd ../kimi-coding-template && pnpm compile",
		"build:all": "pnpm build && pnpm build:templates",
		"watch": "pnpm --filter @all-in-copilot/sdk watch",
		"watch:cli": "pnpm --filter @all-in-copilot/cli watch",
		"lint": "eslint packages/sdk/src --ext .ts",
		"format": "prettier --write . --ignore-path .gitignore",
		"test": "pnpm --filter @all-in-copilot/sdk test",
		"clean": "rm -rf packages/sdk/dist cli/dist templates/*/out templates/*/*.vsix",
		"create": "node cli/dist/index.js",
		"package:base": "cd templates/base-template && npx @vscode/vsce package --no-dependencies",
		"package:glm": "cd templates/glm-template && npx @vscode/vsce package --no-dependencies",
		"package:kimi": "cd templates/kimi-template && npx @vscode/vsce package --no-dependencies",
		"package:kimi-coding": "cd templates/kimi-coding-template && npx @vscode/vsce package --no-dependencies",
		"package:mimo": "cd templates/mimo-template && npx @vscode/vsce package --no-dependencies",
		"package:minimax": "cd templates/minimax-template && npx @vscode/vsce package --no-dependencies",
		"package:acp": "cd templates/acp-template && npx @vscode/vsce package --no-dependencies",
		"package:all": "pnpm package:acp && pnpm package:base && pnpm package:glm && pnpm package:kimi && pnpm package:kimi-coding && pnpm package:mimo && pnpm package:minimax",
		"build-and-package": "pnpm build:all && pnpm package:all"
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@vscode/vsce": "^3.7.1",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.39.0"
	},
	"packageManager": "pnpm@8.15.4+sha512.0bd3a9be9eb0e9a692676deec00a303ba218ba279d99241475616b398dbaeedd11146f92c2843458f557b1d127e09d4c171e105bdcd6b61002b39685a8016b9e"
}
