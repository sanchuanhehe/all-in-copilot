{
	"name": "@all-in-copilot/sdk",
	"version": "1.0.0",
	"description": "Core SDK for LLM providers - Uses official OpenAI and Anthropic SDKs",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.js"
		},
		"./providers": {
			"types": "./dist/providers/index.d.ts",
			"import": "./dist/providers/index.js",
			"require": "./dist/providers/index.js"
		}
	},
	"scripts": {
		"build": "tsc",
		"watch": "tsc --watch",
		"test": "vitest",
		"test:run": "vitest run",
		"download-api": "npx @vscode/dts dev && npx @vscode/dts main && mv ./vscode.d.ts src/vscode/ 2>/dev/null || true && mv ./vscode.proposed.*.d.ts src/vscode/ 2>/dev/null || true",
		"postinstall": "npm run download-api 2>/dev/null || true"
	},
	"enabledApiProposals": [
		"chatParticipantAdditions",
		"chatParticipantPrivate"
	],
	"dependencies": {
		"@agentclientprotocol/sdk": "^0.13.1",
		"@anthropic-ai/sdk": "^0.27.3",
		"openai": "^4.104.0"
	},
	"peerDependencies": {
		"zod": "^3.25.0 || ^4.0.0"
	},
	"devDependencies": {
		"@vitest/coverage-v8": "^2.1.9",
		"@vscode/dts": "^0.4.1",
		"vitest": "^2.1.1"
	},
	"keywords": [
		"llm",
		"openai",
		"anthropic",
		"provider",
		"sdk"
	],
	"license": "MIT"
}
