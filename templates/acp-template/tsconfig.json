{
        "compilerOptions": {
                "target": "ES2022",
                "module": "preserve",
                "moduleResolution": "bundler",
                "lib": ["ES2022", "DOM"],
                "outDir": "./out",
                "rootDir": "./src",
                "strict": true,
                "esModuleInterop": true,
                "skipLibCheck": true,
                "forceConsistentCasingInFileNames": true,
                "declaration": true,
                "sourceMap": true,
                "types": ["./src/vscode/vscode.d.ts"]
        },
        "include": ["src/**/*"],
        "exclude": ["node_modules", "out"]
}
